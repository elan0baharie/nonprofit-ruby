<div class="well">
  <form class="form-horizontal" action="/volunteers" method="post">
    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">Volunteer name:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" name="name" id="name" placeholder="Name">
      </div>
    </div>
    <div class="form-group">
      <label for="address" class="col-sm-2 control-label">Address:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" name="address" id="address" placeholder="Address">
      </div>
    </div>
    <div class="form-group">
      <label for="details" class="col-sm-2 control-label">Details or Notes:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" name="details" id="details" placeholder="Details">
      </div>
    </div>
    <div class="form-group">
      <label for="project_id" class="col-sm-2 control-label">Project Id (optional):</label>
      <div class="col-sm-10">
        <input type="number" class="form-control" name="project_id" id="project_id" placeholder="Default to 0">
      </div>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>

<% if @volunteers.any? %>

  <div class="well">
    <h2>All volunters:</h2>
    <p>Click on a volunteer to edit</p>
    <ul>
      <% @volunteers.each() do |volunteer| %>
      <li><a href="/volunteers/<%= volunteer.id() %>/edit"><%= volunteer.name() %></a></li>
      <ul>
        <li><%= volunteer.address() %></li>
        <li><%= volunteer.details() %></li>
      </ul>
      <% end %>
    </ul>
  </div>
  <p>
    <a href="/">Back to Home</a>
  </p>
<% else %>
  <div class="well">
    <h2>You have yet add a volunteer.</h2>
    <p>
      <a href="/">Back to Home</a>
    </p>
  </div>
<% end %>
