
<div class="well">
  <h3>Edit <%= @volunteer.name() %></h3>
  <form class="form-horizontal" action="/volunteers/<%= @volunteer.id() %>" method="post">
    <input name="_method" type="hidden" value="patch">
    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">Volunteer name:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" name="name" id="name" placeholder="Name">
      </div>
    </div>
    <div class="form-group">
      <label for="address" class="col-sm-2 control-label">Address:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" name="address" id="address" placeholder="Address">
      </div>
    </div>
    <div class="form-group">
      <label for="details" class="col-sm-2 control-label">Details or Notes:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" name="details" id="details" placeholder="Details">
      </div>
    </div>
    <div class="form-group">
      <label for="projects_list" class="col-sm-2 control-label">Project Id:</label>
      <select id='projects_list' name='projects_list' type='text'>
        <% @projects.each() do |project| %>
          <option value="<%= project.id()%>"> <%= project.name() %> </option>
        <% end %>
      </select>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
<div class="well">
  <h3>Delete <%= @volunteer.name() %></h3>
  <form action="/volunteers/<%= @volunteer.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class="btn btn-default">Delete volunteer</button>
</form>
</div>
<p>
  <a href="/">Back to Home</a>
</p>
